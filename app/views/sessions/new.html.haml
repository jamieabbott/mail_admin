.row-fluid
  .span4.offset4
    = simple_form_for :user, :url => sessions_url, :html => { :class => 'form-horizontal' } do |f|
      = field_set_tag do
        %legend Sign In
        = f.input :email, placeholder: "email@example.com"
        = f.input :password, placeholder: "Password"
        = f.button :submit, class: 'btn btn-success'
        =# f.submit "Sign In", :disable_with => "Checking credentials...", :class => 'btn btn-success'
      / .actions
      /   = submit_tag "Log in", 

    / %p= link_to "Forgotten Password?", new_password_reset_path